<section id="chatbot">
    <div class="chat-container">

        <div id="scrollingChat">
        </div>

        <div class="inputgroup chat-input">

                <input id="textInput"
                       placeholder="Type something"
                       onkeydown="ConversationPanel.inputKeyDown(event, this);">
            <input type="submit" onclick="ConversationPanel.sendMessage('textInput');loadingAnimation();"
                   value="enter" name="enter" id="enter">
        </div>

        <div style="display: none" id="payload-column" class="fixed-column content-column">
            <div id="payload-initial-message">
                Type something to see the output
            </div>
            <div id="payload-request" class="payload"></div>
            <div id="payload-response" class="payload"></div>
        </div>

    </div>
</section>

<script src="js/jquery.min.js"></script>
<script>
    var scrollBottomChat = function() {
        $('#scrollingChat').scrollTop($('#scrollingChat')[0].scrollHeight);
    };

    var loadingAnimation = function() {
        var animationDots = '<div class="segments load loading-animation"><div class="from-watson top typing"><div class="message-inner"><span class="dot_one"></span><span class="dot_two"></span><span class="dot_three"></span></div></div></div>';

        // Add the loading animation
        if ($(".loading-animation").length == 0)
            $("#scrollingChat").append(animationDots).delay(1000);

        scrollBottomChat();

        // Run the animation for 1 second and remove it
        setTimeout(function(){
            $(".loading-animation").remove();
        }, 1000);
    };
</script>



