<section id="signup" class="section-primary">
    <div class="container">
        <h2>Sign up for news and updates</h2>

        <div id="mc_embed_signup">
            <form action="/" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                <div id="mc_embed_signup_scroll">

                    <!-- Text Input Field -->
                    <div class="mc-field-group"><input type="email"  placeholder="Your Email" name="EMAIL" class="inputline" id="subscribe-box"></div>
                    <!-- /Text Input Field -->

                    <div id="mce-responses" class="clear">
                        <div class="response" id="mce-error-response" style="display:none"></div>
                        <div class="response" id="mce-success-response" style="display:none">
                            we will contact you when there is something important.
                        </div>
                    </div>
                    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                    <input type="submit" onclick="ContactInput.subscribeKeyDown(event, this)" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button btn btn-primary"></div>
                <!-- /Submit Button -->
            </form>
        </div>
    </div>
</section>

