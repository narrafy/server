
<section id="contact" class="section-secondary">

    <div class="contact-form">
        <h2>Contact us</h2>
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <form method="post" role="form" class="contact-form">

                        <div class="form-group">

                            <input type="name" name="name" class="form-input-text form-control" placeholder="Name" required="required">
                        </div>
                        <div class="form-group">

                            <input type="email" name="email" class="form-input-text form-control" placeholder="Email" required="required">
                        </div>

                        <div class="form-group">
                            <textarea name="message" class="form-input-text form-control" rows="4" placeholder="Message" required="required"></textarea>
                        </div>
                        <div class="send-button bottom-margin">
                            <button type="submit" onclick="ContactInput.contactSubmit(this)" class="btn btn-block btn-primary">SEND MESSAGE</button>

                        </div>
                    </form>
                </div>

            </div>
            <div class="row">
                <div id="email-notification" class="hide">
                    <p class="leave-email">
                        thank you for your message. we will get back to you shortly.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>