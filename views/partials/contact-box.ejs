
<section id="contact" class="section-secondary">

    <div class="contact-form">
        <h2>Contact us</h2>
        <div class="container">
            <div  class="row" id="contact-form">
                <div class="col-md-6 col-md-offset-3">

                        <div class="form-group">

                            <input type="name" name="name" class="form-input-text form-control" placeholder="Name" required="required">
                        </div>
                        <div class="form-group">

                            <input id="email-box" type="email" name="email" class="form-input-text form-control" placeholder="Email" required="required">
                        </div>

                        <div class="form-group">
                            <textarea id="contact-box" name="message" class="form-input-text form-control" rows="4" placeholder="Message" required="required"></textarea>
                        </div>
                        <div class="send-button bottom-margin">
                            <button type="submit" onclick="ContactInput.contactSubmit(this)" class="btn btn-block btn-primary">SEND MESSAGE</button>
                        </div>
                </div>

            </div>
            <div class="row">
                <div id="email-notification" class="hide">
                    <p class="text-center big">
                        Thank you for your message. We will get back to you shortly.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>